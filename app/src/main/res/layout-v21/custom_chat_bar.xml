<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/colorPrimary">
    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/custom_profile_image"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:cropToPadding="true"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1.5">


            <TextView
                android:id="@+id/custom_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_weight="0.7"

                android:text="UserName"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/custom_user_last_seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/custom_profile_name"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="3dp"
                android:layout_weight="0.7"
                android:text="Last Seen"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/phone"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:backgroundTint="@color/colorPrimary"

            android:src="@drawable/phone_foreground" />

        <ImageButton
            android:id="@+id/video"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
           android:layout_marginRight="2dp"

            android:src="@drawable/video_foreground" />
    </LinearLayout>

</RelativeLayout>