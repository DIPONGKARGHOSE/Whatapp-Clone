<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".otp_verfic">
    <LinearLayout
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="50dp"
          android:fontFamily="cursive"
        android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="50dp"
            android:text="Verification Code">

        </TextView>
        <TextView
        android:fontFamily="cursive"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="30dp"
        android:text="please type the code  send your phone number">

    </TextView>
        <LinearLayout

            android:layout_weight="6"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/code1"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/backcode"
                android:focusable="true"
                android:textColor="#ffff"
                android:layout_marginLeft="5dp"
                android:layout_height="50dp">

            </EditText>

            <EditText
                android:id="@+id/code2"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/backcode"
                android:focusable="true"
                android:textColor="#ffff"
                android:layout_marginLeft="5dp"
                android:layout_height="50dp">

            </EditText>
            <EditText
                android:id="@+id/code3"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/backcode"
                android:focusable="true"
                android:textColor="#ffff"
                android:layout_marginLeft="5dp"
                android:layout_height="50dp">

            </EditText>
            <EditText
                android:id="@+id/code4"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/backcode"
                android:focusable="true"
                android:textColor="#ffff"
                android:layout_marginLeft="5dp"
                android:layout_height="50dp">

            </EditText>
            <EditText
                android:id="@+id/code5"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/backcode"
                android:focusable="true"
                android:textColor="#ffff"
                android:layout_marginLeft="5dp"
                android:layout_height="50dp">

            </EditText>
            <EditText
                android:id="@+id/code6"
                android:inputType="number"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/backcode"
                android:focusable="true"
                android:maxLength="1"
                android:gravity="center"
                android:textColor="#ffff"
                android:layout_marginLeft="5dp"
                android:layout_height="50dp">

            </EditText>

        </LinearLayout>
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_marginTop="60dp"
            android:id="@+id/ripple1"
            app:mrl_rippleAlpha=".1"
            app:mrl_rippleOverlay="true"
android:layout_weight="1"
            app:mrl_rippleColor="#25C4F3"
            android:layout_below="@+id/us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button

                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="sign_in"
                android:id="@+id/otp_login"
                android:backgroundTint="#116EB8"
                android:layout_below="@+id/us"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>


        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

</RelativeLayout>