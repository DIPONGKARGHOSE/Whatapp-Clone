<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#AE2F2F">
    <LinearLayout
        android:weightSum="4"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
            android:id="@+id/custom_profile_image"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/profile"
            android:cropToPadding="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true" />
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="1.5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        <TextView
            android:layout_weight="0.6"
            android:id="@+id/custom_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Display UserName"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_alignParentLeft="true" />


        <TextView
            android:layout_weight="0.6"
            android:id="@+id/custom_user_last_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_profile_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:text="Last Seen"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_alignParentLeft="true" />

    </LinearLayout>
        <ImageButton
        android:layout_weight="1"
        android:id="@+id/phone"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/phone_foreground" />
        <ImageButton
            android:layout_weight="1"
            android:id="@+id/video"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/colorPrimary"


            android:src="@drawable/video_foreground" />
    </LinearLayout>

</RelativeLayout>